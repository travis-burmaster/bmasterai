# AI Consultant Agent - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# API KEYS (Required)
# =============================================================================

# OpenAI API Key - Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Perplexity API Key - Get from https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=pplx-your-perplexity-api-key-here

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================

# OpenAI model to use (gpt-3.5-turbo, gpt-4, gpt-4-turbo, etc.)
MODEL_ID=gpt-3.5-turbo

# Model temperature (0.0 to 1.0) - higher values make output more creative
TEMPERATURE=0.7

# Maximum tokens for model responses
MAX_TOKENS=2000

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application name
APP_NAME=ai_consultant_agent

# Unique agent identifier
AGENT_ID=consultant-agent-001

# Display name for the agent
AGENT_NAME=AI Business Consultant

# =============================================================================
# INTEGRATION SETTINGS (Optional)
# =============================================================================

# Slack webhook URL for notifications
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Email configuration for notifications
# EMAIL_USERNAME=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password-here
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file name
LOG_FILE=ai_consultant.log

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Request timeout in seconds
REQUEST_TIMEOUT=30

# Maximum number of retries for failed requests
MAX_RETRIES=3

# =============================================================================
# SECURITY SETTINGS (Optional)
# =============================================================================

# Encryption key for sensitive data (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
# ENCRYPTION_KEY=your-encryption-key-here

# =============================================================================
# DATABASE CONFIGURATION (Optional)
# =============================================================================

# MongoDB connection string
# MONGODB_URL=mongodb://localhost:27017/ai_consultant

# PostgreSQL connection string
# POSTGRESQL_URL=postgresql://user:password@localhost:5432/ai_consultant

# Redis connection for caching
# REDIS_URL=redis://localhost:6379/0

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable debug mode (true/false)
# DEBUG=false

# Enable verbose logging (true/false)
# VERBOSE=false

# =============================================================================
# RATE LIMITING (Optional)
# =============================================================================

# API calls per minute
# API_RATE_LIMIT=60

# Requests per minute per user
# USER_RATE_LIMIT=10

# =============================================================================
# CACHING SETTINGS (Optional)
# =============================================================================

# Cache TTL in seconds
# CACHE_TTL=3600

# Enable caching (true/false)
# ENABLE_CACHE=true
